<script type="text/javascript">
	$(function (){

		/*给'阶段选择框'添加change事件*/
		$("#create-stage").change(function (){
			//find("属性:属性值")：查找符合条件的元素作为返回对象
			let stageName=$(this).find("option:selected").text();

			//表单验证
			if (stageName==null||stageName==""){
				//如果选择了空项则要清空可能性文本框中的内容
				$("#create-possibility").val("");
				return;
			}

			$.ajax({
				url:'workbench/transaction/getPossibilityByStageName.do',
				type:'post',
				dataType:'json',
				data:{
					stageName:stageName
				},
				success:function (data){
					//把获取到的可能性回显到可能性文本框中
					$("#create-possibility").val(data);
				}
			});
		});

		/*给'客户名称输入框'添加键盘弹起事件*/
		/*$("#create-accountName").keyup(function (){});*/

		/*给'客户名称输入框'添加自动补全框*/
		$("#create-customerName").typeahead({	//这个函数每次键盘弹起、输入内容变动时会自动调用，不需要在外面添加keyup事件且更强大
			//source:['sb','250','nb','xsl','666','haha']	 //source的值可以是静态数据['json1','json2']
			source: function (jquery, process) {	//source的值也可以是动态数据，但其返回值必须为json
													//jquery是用户在容器中输入的内容
													//process其实是一个函数，用法是将json数据传入，会将该json转为source属性的动态数据
				//收集参数
				//let customerName=$("#create-accountName").val();

				//发送请求
				$.ajax({
					url: 'workbench/transaction/blurryQueryCustomerName.do',
					type: 'post',
					dataType: 'json',
					data:{
						//customerName:customerName
						customerName:jquery		//直接用jquery作为输入内容即可，不需要额外获取参数
					},
					success: function (data) {
						process(data);	//调用process函数，将返回值为json类型的data转为source属性的动态数据
					}
				});
			}
		});

		/*给创建交易页面的'保存按钮'添加单击事件*/
		$("#saveCreateTranBtn").click(function (){
			//收集参数
			let owner=$("#create-owner").val();
			let customerName=$.trim($("#create-customerName").val());
			let money=$.trim($("#create-money").val());
			let name=$.trim($("#create-name").val());
			let expectedDate=$("#create-expectedDate").val();
			let stage=$("#create-stage").val();
			let type=$("#create-type").val();
			let source=$("#create-source").val();
			let activityId=$("#create-activityId").val();
			let contactsId=$("#create-contactsId").val();
			let description=$.trim($("#create-description").val());
			let contactSummary=$.trim($("#create-contactSummary").val());
			let nextContactTime=$("#create-nextContactTime").val();

			//表单验证
			if (customerName==""||name==""||expectedDate==""||stage==""||owner==""){
				alert("必填字段不能为空！");
				return;
			}
			let regExp=/null|^$|^(([1-9]\d*)|0)$/;
			if (!regExp.test(money)){
				alert("金额必须为非负整数！");
				return;
			}

			//发送请求
			$.ajax({
				url: 'workbench/transaction/saveCreateTran.do',
				type: 'post',
				dataType: 'json',
				data:{
					owner:owner,
					customerName:customerName,
					money:money,
					name:name,
					expectedDate:expectedDate,
					stage:stage,
					type:type,
					source:source,
					activityId:activityId,
					contactsId:contactsId,
					description:description,
					contactSummary:contactSummary,
					nextContactTime:nextContactTime
				},
				success: function (data) {
					if (data.code=='1'){
						//保存成功之后，跳转到交易主页面
						window.location.href="workbench/transaction/index.do";
					}else{
						//保存失败，提示信息，页面不跳转
						alert(data.message);
					}
				}
			});
		});
	});
</script>
</head>
